    <result column="nation" property="nation" jdbcType="VARCHAR" />
    <result column="ancestral" property="ancestral" jdbcType="VARCHAR" />
  </resultMap>
  <resultMap id="ResultMapWithBLOBs" type="com.zerody.user.pojo.SysUserInfo" extends="BaseResultMap" >
    <result column="description" property="description" jdbcType="LONGVARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, user_name, gender, phone_number, email, nickname, avatar, birthday,
     certificate_card,
    certificate_card_address, prov_city_district, contact_address, highest_education, graduated_from, major,
    marital_status, open_id
    register_time, create_id, create_user, create_time, update_id, update_user, update_time, 
    status, nation, ancestral,description
  </sql>
  <sql id="Blob_Column_List" >

  </sql>
  <select id="selectUserByPhoneOrLogName" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/>
    from sys_user_info
    <where>
      status != -1
      <if test="userInfo.id != null and userInfo.id != ''">
        and id != #{userInfo.id}
      </if>
      or ( 1 = 2
      <if test="userInfo.phoneNumber != null and userInfo.phoneNumber != ''">
        or phone_number = #{userInfo.phoneNumber}
      </if>
      <if test="userInfo.loginName != null and userInfo.loginName != ''">
        or login_name = #{userInfo.loginName}
      </if>
      )
    </where>

  </select>

  <select id="selectUserInfo" resultType="com.zerody.user.vo.SysLoginUserInfoVo">
SELECT
	ui.id,
	ui.user_name userName,
	ui.gender,
	li.mobile_number phoneNumber,
	ui.email,
	ui.avatar,
	ui.nickname,
	ui.open_id,
	li.last_check_sms lastCheckSms,
	li.user_pwd userPwd,
	ssi.comp_id companyId
FROM
	sys_user_info ui
JOIN (
	SELECT
		user_id,
		user_pwd,
		last_check_sms,
		mobile_number
	FROM
		sys_login_info
	WHERE
		login_name = #{userName}
		and status=0
	UNION
		SELECT
			user_id,
			user_pwd,
			last_check_sms,
			mobile_number
		FROM
			sys_login_info
		WHERE
			mobile_number = #{userName}
			and status=0
) li ON ui.id = li.user_id
LEFT JOIN sys_staff_info ssi ON ssi.user_id=ui.id and ssi.`status`=0 and is_main_company=1
WHERE
	ui. STATUS = 0
	limit 1
  </select>
</mapper>